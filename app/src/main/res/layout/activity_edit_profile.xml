<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1c181"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutSaveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:background="@drawable/ic_check_circle"
                android:backgroundTint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Profile"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold|normal"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutEditProfileImageInEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRegister"
            app:layout_constraintWidth_percent=".8" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewEditProfileImage"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:elevation="15dp"
                android:src="@drawable/ic_person"
                app:shapeAppearanceOverlay="@style/Circular" />

            <ImageView
                android:id="@+id/imageViewTheEditProfileImageInEditProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_gravity="right|bottom"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/black" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_rounded_corner"
            android:backgroundTint="#f5e9e2" >

            <LinearLayout
                android:id="@+id/linearLayoutSwitchSectionsInProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRAdius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_gravity="center" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="2dp"
                                android:background="@drawable/ic_account"
                                android:backgroundTint="#292929"
                                android:layout_marginStart="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#605E5E"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextEditUsersName"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="________________________"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="50dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRAdius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_gravity="center" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="2dp"
                                android:background="@drawable/ic_list"
                                android:backgroundTint="#292929"
                                android:layout_marginStart="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bio"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#605E5E"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextEditUsersBio"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="________________________"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="50dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRAdius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_gravity="center" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="2dp"
                                android:background="@drawable/ic_calendar"
                                android:backgroundTint="#292929"
                                android:layout_marginStart="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#605E5E"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextEditUsersAge"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="________________________"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="50dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRAdius="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="1dp">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_person_pin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Address"
                                    android:textColor="#F8554A4A"
                                    android:textSize="16sp"
                                    android:textStyle="bold|normal" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_black_home"
                                app:tint="@color/black"
                                android:layout_marginStart="30dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/editTextEditUsersPersonalAddress"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:text="________________________"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_business"
                                app:tint="@color/black"
                                android:layout_marginStart="30dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/editTextEditUsersWorkAddress"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="________________________"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRAdius="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_gravity="center" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_phone_android"
                                android:layout_marginStart="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#605E5E"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextEditUsersPhoneNumber"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="________________________"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="50dp"
                            android:layout_marginBottom="15dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>