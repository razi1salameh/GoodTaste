<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:background="#f5e9e2" >

        <LinearLayout
            android:id="@+id/linearLayoutGroceryList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_rounded_corner"
            android:padding="10dp"
            android:backgroundTint="#A1c181"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGroceryListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGroceryListDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:fontFamily="@font/allerta_stencil"
                android:background="@drawable/black_rounded_corner"
                android:backgroundTint="@color/grayText"
                android:text="____________________________"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>