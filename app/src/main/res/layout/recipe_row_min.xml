<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:id="@+id/ObjectRow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="#f5e9e2"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/black_rounded_corner"
            android:backgroundTint="#619B9A" >

            <ImageView
                android:id="@+id/imageViewRecipePicture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/black_rounded_corner"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_image_not_supported"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="#### ssss"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.843"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.099"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowCategory"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Category :"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.843"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.348"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Time :"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.843"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.502"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowPersonBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=" "
                android:background="@drawable/image_view_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.868"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowPerson"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" "
                android:background="@drawable/ic_person"
                android:backgroundTint="#A1C181"
                app:layout_constraintBottom_toBottomOf="@+id/textViewRowPersonBackground"
                app:layout_constraintEnd_toEndOf="@+id/textViewRowPersonBackground"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="@+id/textViewRowPersonBackground"
                app:layout_constraintTop_toTopOf="@id/textViewRowPersonBackground"
                app:layout_constraintVertical_bias="0.483"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowVideoBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=" "
                android:background="@drawable/image_view_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.868"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowVideo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text=" "
                android:background="@drawable/ic_video"
                android:backgroundTint="#A1C181"
                app:layout_constraintBottom_toBottomOf="@+id/textViewRowVideoBackground"
                app:layout_constraintEnd_toEndOf="@+id/textViewRowVideoBackground"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/textViewRowVideoBackground"
                app:layout_constraintTop_toTopOf="@+id/textViewRowVideoBackground"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowFavoritesBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/image_view_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.768"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.868"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/textViewRowFavorites"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_star_not_fill"
                android:backgroundTint="#A1C181"
                android:onClick="addToFavoritesPage"
                app:layout_constraintBottom_toBottomOf="@+id/textViewRowFavoritesBackground"
                app:layout_constraintEnd_toEndOf="@+id/textViewRowFavoritesBackground"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewRowFavoritesBackground"
                app:layout_constraintTop_toTopOf="@+id/textViewRowFavoritesBackground"
                app:layout_constraintWidth_percent=".8" />

            <ImageButton
                android:id="@+id/ImageButtonSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:background="@drawable/black_rounded_corner"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.981"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.95"
                app:srcCompat="@drawable/ic_expand_more" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>